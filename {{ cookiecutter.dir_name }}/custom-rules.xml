<?xml version="1.0" encoding="UTF-8"?>
<project name="{{ cookiecutter.app_name }}-custom">

    <!-- Compile Python sources into Java class files -->
    <target name="-voc-compile" description="Compile the Python source to a JAR file">
        <exec executable="python"
                failonerror="true">
            <arg value="-m" />
            <arg value="voc" />
            <arg value="app/{{ cookiecutter.app_name }}.py" />
            <arg value="app" />
            <arg value="bin/classes" />
        </exec>
    </target>

    <target name="-pre-compile">
        <antcall target="-voc-compile" />
    </target>

</project>